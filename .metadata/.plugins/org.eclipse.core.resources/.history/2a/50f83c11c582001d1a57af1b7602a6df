import processing.core.PApplet;
import processing.core.PImage;

public class Fish {

	private int x, y, width, height;
	private final int LIMIT=600;
	private PImage image;
	
	public Fish(int x, int y, int fishType, PApplet driver) {
		this.x = x;
		this.y = y;
		switch (fishType) {
			case 0:
				image = driver.loadImage("fish1.png");
				width = 100;
				height = 75;
			case 1:
				image = driver.loadImage("fish2.png");
				width = 125;
				height = 90;
			case 2:
				image = driver.loadImage("fish3.png");
				width = 80;
				height = 50;
			case 3:
				image = driver.loadImage("fish4.png");
				width = 150;
				height = 100;
		}
		image.resize(width, height);
	}
	public void draw(PApplet window) {
		window.image(image, x, y);
	}
	public void update() {
		x++;
		if(x>LIMIT)
			x=0;
	}
	public int getY() {
		return y;
	}
	public int getHeight() {
		return height;
	}
	
}

