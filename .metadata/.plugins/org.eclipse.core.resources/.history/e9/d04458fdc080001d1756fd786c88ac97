import ProcessingIntro.Button;
import processing.core.PApplet;

public class GraphicDriver extends PApplet{
	public static void main(String[] args) { PApplet.main("GraphicDriver");	}

	private final int HEIGHT=600, WIDTH=600;
	private Button button;
	
	public void settings() {
		size(WIDTH, HEIGHT);
		button = new Button(WIDTH/2-160, HEIGHT-200, WIDTH/2-50, HEIGHT/4-50, "Swim");
	}
	public void setup() {
		background(25, 125, 250);
		strokeWeight(10);
	}
	public void draw() {
		button.draw(this);
	}
	public void mousePressed() {
		
	}
}
